<turbo-frame id="login_btn">
  <% if current_user %>
    <%= form_tag sign_out_path, class:"flex-col items-center flex" do -%>
      <%= submit_tag "Disconnect", class: "bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded"%>
    <% end -%>
  <% else %>
    <%= form_tag sign_in_path, class:"flex-col items-center flex" do -%>
      <input type="hidden" name="signature" data-login-target="signature" />
      <input type="hidden" name="ens" data-login-target="ens" />
      <input type="hidden" name="message" data-login-target="message" />
      <button
        data-action="click->login#signIn:prevent"
        class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded">
        Sign In With MetaMask
      </button>
    <% end -%>
  <% end %>
</turbo-frame>